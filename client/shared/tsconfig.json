{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/*"],
      "@shared/hooks/*": ["./src/hooks/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
